
  Title: <%= @post.title %> <br>
  Content: <%= @post.content %><br>
  Comments: <% @post.comments.each do |c| %>
    <%= c.content %>
  <% end %><br>

  Category Name: <% @post.categories.each do |category| %>
    <%= category.name %>
  <% end %><br>

  Usernames:<br>

  <br>

  <% @post.users.uniq.each do |u| %>
    <%= link_to u.username, user_path(u)   %><br>
  <% end %><br>

<h2>Add a New Comment? </h2>

<%= form_for @post.comments.build do |f| %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>

  <%= f.collection_select :user_id, User.all, :id, :username %>
<br>
   <%= f.fields_for :users, User.new do |user_builder|%>
    <% user_builder.text_field :username %>
    <% user_builder.text_field :email %>
  <% end %>
  <%= f.submit %>
<% end %>
